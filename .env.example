# mia-backend .env example
# Copy this file to .env and update values as needed.

# Port selection
# Production should use 4000
# Local/test defaults to 4001 if NODE_ENV != production
PORT=4001

# Allow CORS origins (comma separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:5173

# Firebase / other secrets
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Prisma/database
DATABASE_URL=

# Other app-specific variables
ALLOW_ALL_CORS=false

# NODE_ENV hint
# set to 'production' in the production environment
NODE_ENV=development
